	//Ejercicio2; Verificar si un número está dentro de un rango específico
	
	double NumeroADefinir = 11;
	double NumeroMinimo = 0;
	double NumeroMaximo = 10;
	
	boolean ResultadoNumeroEntreRango = (NumeroMinimo<NumeroADefinir && NumeroMaximo>NumeroADefinir );
	boolean ResultadoNumeroFueraRango = (NumeroMinimo>NumeroADefinir|| NumeroMaximo<NumeroADefinir);
	
	if (ResultadoNumeroEntreRango) {
		System.out.println("El numero " + NumeroADefinir + " esta dentro del rango de " + NumeroMinimo + " y " + NumeroMaximo );}
	
	else {System.out.println("El numero " + NumeroADefinir + " esta fuera del rango de " + NumeroMinimo + " y " + NumeroMaximo );
		}
	
	
