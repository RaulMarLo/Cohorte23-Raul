package clases;

import java.util.Scanner;

public class NuevoHola {
	Scanner sn = new Scanner(System.in);
	
	private String nombre; //Tipo de dato string que es una variable sin necesidad de declararlo que al mismo tiempo es una clase. En pocas paalabras es una variable y una clase ya que esta dentro de una clase.
	//Usamos el metodo constructor

	public NuevoHola(String nombre) {
		super();
		this.nombre = nombre;
	}
	
	public void saludo() {
		System.out.print("Hola desde java con sts de nuez " + 		this.nombre);
	}
	
	public void saludoConNombre() {
		System.out.print("Cual es tu nombre?");
		
	}
	
}
